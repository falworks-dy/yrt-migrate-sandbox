{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "main.js",
    "src/**/*.js",
    "src/**/*.mjs"
  ]
}
