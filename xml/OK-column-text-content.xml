<LayoutXml>
  <LinearLayout>
    <LayoutBody>

      <Text size="9">バインディングデータを含むColumnText</Text>
      <Spacer height="2" />
      <ColumnText cols="5 5 5 5 5 5">No.${one}-${two}</ColumnText>

      <Spacer height="10" />

      <Text size="9">上記を固定文字列だけで書き直したColumnText</Text>
      <Spacer height="2" />
      <ColumnText cols="5 5 5 5 5 5">No.1-2</ColumnText>

      <Spacer height="10" />

      <Text size="9">ColumnContent で値を指定したテキスト：</Text>
      <Spacer height="2" />
      <ColumnText cols="5 5 5 5 5 5">
        <ColumnTextContent>No.${one}-${two}</ColumnTextContent>
      </ColumnText>

    </LayoutBody>
  </LinearLayout>

  <StackLayout margin="30">

    <Text x="0" y="0" width="50">Report.page:</Text>
    <ColumnText x="50" y="0" width="10" cols="*">${Report.page}</ColumnText>

    <Text x="0" y="20" width="50">Report.totalPages:</Text>
    <ColumnText x="50" y="20" width="10" cols="*">${Report.totalPages}</ColumnText>

    <Text x="0" y="40" width="50">Layout.page:</Text>
    <ColumnText x="50" y="40" width="10" cols="*">${Layout.page}</ColumnText>

    <Text x="0" y="60" width="50">Layout.totalPages:</Text>
    <ColumnText x="50" y="60" width="10" cols="*">${Layout.totalPages}</ColumnText>

  </StackLayout>
</LayoutXml>
