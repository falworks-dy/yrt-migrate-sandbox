<!--
  事象:
    各種バインディングが無警告で StyleXML に移動します。
  
  備考:
    StyleXML では全属性バインディング不可能です。

  経過:
    - 2025-09-04
      警告が出るようになったことを確認。
      ただし GridStyle の問題なのに "Grid の col 属性値に..." のようなメッセージが出るので、
      メッセージ中の要素名を要修正かと思われます。
-->

<LayoutXml>
  <LinearLayout>
    <LayoutBody>

      <Grid cols="30" rows="10">
        <GridStyle
          col="${val}"
          row="${val}"
          borderThickness="${val}"
          outerBorderThickness="${val}"
          outerBorderTopThickness="${val}"
          backgroundColor="${val}"
        />
        <GridCell col="0" row="0">
          <Text>text</Text>
        </GridCell>
      </Grid>

    </LayoutBody>
  </LinearLayout>
</LayoutXml>